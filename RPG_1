import random

game_running = True
game_results = []


def monster_roll():
    return random.randint(1, 21)


def player_roll():
    return random.randint(1, 21)


def unarmed():
    return random.randint(1, 5)


def s_swd():
    return random.randint(1, 9)


def l_swd():
    return random.randint(1, 11)


while game_running == True:

    new_round = True

    armr = {"leather": 1,
            "scale": 2,
            "half plate": 3,
            "full plate": 4}
    shld = {"wooden": 1,
            "metal": 2}
    wpn = {"fists": unarmed,
           "short sword": s_swd,
           "long sword": l_swd}
    plyr = {"name": (),
            "AC_base": 10,
            "armor": (),
            "shield": (),
            "weapon": (),
            "attack": player_roll,
            "HP": 50}

    mnstr = {"name": "Korg",
             "AC": 19,
             "attack_min": monster_roll,
             "HP": 100}

    print("What is your name?")
    print("____" * 5)
    plyr["Name"] = input()
    print("____" * 5)
    print("Hello " + plyr["Name"])
    print("[enter]")
    input()
