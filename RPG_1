                                    if mnstr["HP"] <= 0:
                                        player_won = True
                                print(mnstr["HP"])
                            elif action_1 == "2":
                                print(
                                    "You flee and never again are known as a hero..")
                                print(
                                    "Your shame will follow you for the rest of your days.")
                                new_round = False
                        elif fight_2 == "2":
                            print("You turn tail and run.")
                            print(
                                "But the monster is faster than you and you are promptly caught and eaten.")
                            new_round = False

                        else:
                            print("Your indecision has left you unprepared...")
                            print("A wild beast has found you.")
                            print("you must fight or flee!")
                            print("1: Fight")
                            print("2: Flee")
                            action_2 = input()
                            print("[enter]")
                            if action_2 == "1":
                                print("You attack the monster...")
                                player_roll()
                                if (plyr["attack"]) >= mnstr["AC"]:
                                    mnstr["HP"] = mnstr["HP"] - \
                                        plyr["attack"] + plyr["weapon"]
                                    if mnstr["HP"] <= 0:
                                        player_won = True
                                        print(mnstr["HP"])
                            elif action_2 == "2":
                                print(
                                    "You flee and never again are known as a hero..")
                                print(
                                    "Your shame will follow you for the rest of your days.")
                                new_round = False
                            else:
                                print(
                                    "The monster has taken advantage of your lack of action and you are promptly eaten.")
                                print("Farewell hero, you will be remembered.")
                                new_round = False
            elif follow == "2":
                print("You flee and never again are known as a hero..")
                print("Your shame will follow you for the rest of your days.")
                new_round = False
            else:
                print("Your indecision has left you unprepared...")
                print("A wild beast has found you.")
                print("you must fight or flee!")
                print("1: Fight")
                print("2: Flee")
                action_3 = input()
                print("[enter]")
                if action_3 == "1":
                    print("You attack the monster...")
                    player_roll()
                    if plyr["attack"] >= mnstr["AC"]:
                        mnstr["HP"] = mnstr["HP"] - \
