    print("1: Unarmed")
    print("2: Short Sword")
    print("3: Long Sword")
    print("____" * 5)

    plyr["Weapon"] = input()
    print("____" * 5)

    if plyr["Weapon"] == "1":
        plyr["weapon"] = wpn["fists"]
        print("You have chosen your mighty fists!!")
        print("[enter]")
        input()

    elif plyr["Weapon"] == "2":
        plyr["weapon"] = wpn["long sword"]
        print("You have chosen a fine Short Sword!!")
        print("[enter]")
        input()

    elif plyr["Weapon"] == "3":
        plyr["weapon"] = wpn["long sword"]
        print("You have chosen the frightening Long Sword!")
        print("[enter]")
        input()

    else:
        plyr["weapon"] = wpn["fists"]
        print("Your indecision has left you unarmed")
        print("[enter]")
        input()

    print("____" * 5)
    print("Choose Your Armor")
    print("1: Leather Armor")
    print("2: Scale Male")
    print("3: Half Plate")
    print("4: Full Plate")

