        print("[enter]")
        input()

    elif plyr["shield"] == "2":
        plyr["shield"] = shld["metal"]
        print("That metal shield shall protect you well.")
        print("[enter]")
        input()

    elif plyr["shield"] == "3":
        plyr["shield"] = 0
        print("This is bravery, or folly.")
        print("[enter]")
        input()

